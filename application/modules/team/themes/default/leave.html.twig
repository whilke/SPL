{% extends _layout %}

{% block content %}
<div class="row body-container">
<div class="col-lg-offset-3 col-lg-6">
<h1>Leave Team</h1>
<p>WARNING! There is no undoing this. Are you sure you wish to leave the team?</p>

{% if data.message != "" %}
<div class="alert alert-info" id="infoMessage">{{ data.message}}</div>
{% endif%}

{{'team/leave'|form_open()}}
    <p>
        Type 'yes' to confirm:
        {{data.confirm|bs_form_input()}}
    </p>
    {%if isTeamOwner and data.teamList|length > 0%}
        <p>
            New Captain:
            {{'new_cap'|bs_form_dropdown(data.teamList, data.new_cap)}}
        </p>
    {%endif%}

    {{'submit'|bs_form_submit('Create')}}
    

{{form_close()}}

       
{% endblock %}