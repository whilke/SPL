       <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>     
       
        <script type="text/javascript">           
        $("#extruderAds").buildMbExtruder({
                  positionFixed:false,
                  width:200,
                  sensibility:0,
                  top:100,
                  accordionPanels:false,
                  position:"right", // left, right, bottom
                  extruderOpacity:0.5,
                  flapDim:100,
                  textOrientation:"bt", // or "tb" (top-bottom or bottom-top)
                  onExtOpen:function(){},
                  onExtContentLoad:function(){},
                  onExtClose:function(){},
                  hidePanelsOnClose:false,
                  autoCloseTime:0, // 0=ne  ver
                  slideTimer:0
              });
              


        $("#extruderSpons").buildMbExtruder({
                  positionFixed:false,
                  width:200,
                  sensibility:0,
                  top:100,
                  accordionPanels:false,
                  position:"left", // left, right, bottom
                  extruderOpacity:0.5,
                  flapDim:50,
                  textOrientation:"tb", // or "tb" (top-bottom or bottom-top)
                  onExtOpen:function(){},
                  onExtContentLoad:function(){},
                  onExtClose:function(){},
                  hidePanelsOnClose:false,
                  autoCloseTime:0, // 0=ne  ver
                  slideTimer:0
              });
                       
         if ($(window).width() > 1350)    
         {
             $("#extruderAds").openMbExtruder();
             $("#extruderSpons").openMbExtruder();
         }
         else
         if ($(window).width() > 800)    
         {
             $("#extruderAds").openMbExtruder();
         }
         else
         if ($(window).width() < 800)    
         {
             $(".flap").hide();
         }
	</script>
        
    </body>
</html>