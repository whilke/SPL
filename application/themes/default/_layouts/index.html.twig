<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">        
        <title>Strife Pro League</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap core CSS -->
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{'css/bootstrap.min.css'|assets_url()}}">
        <!-- Custom styles -->
        <link rel="stylesheet" href="{{'css/main.css'|assets_url()}}">
        <link rel="stylesheet" href="{{'css/jplayer.blue.monday.css'|assets_url()}}">
        <link rel="stylesheet" href="{{'css/modules/skeleton.css'|assets_url()}}">
        <link rel="stylesheet" href="{{'css/mbExtruder.css'|assets_url()}}">
        {{ css }}

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="{{'js/html5shiv.min.js'|assets_url()}}"></script>
            <script src="{{'js/respond.min.js'|assets_url()}}"></script>
        <![endif]-->
        
        <script src="{{'js/jquery.min.js'|assets_url()}}"></script>
        <script src="{{'js/jquery.jplayer.min.js'|assets_url()}}"></script>
        <script src="{{'js/jquery.hoverIntent.min.js'|assets_url()}}"></script>
        <script src="{{'js/jquery.mb.flipText.js'|assets_url()}}"></script>
        <script src="{{'js/mbExtruder.js'|assets_url()}}"></script>

        <style type="text/css">
            .mySideBar {}
            body {padding-top: 70px;}
            @media screen and (max-width:1000px){
                .mySideBar {display: none;}
            }
            @media screen and (max-width:768px){
                body {padding-top: 70px;}
                .mySideBar {display: none;}
            }
            @media screen and (max-width:368px){
                body {padding-top: 120px;}
            }
        </style>
        
<style type="text/css">
		/* Optional styles */
		
		.sidecontentpullout {
			background-color: Black;
			color: White;
			padding: 4px 3px;
			-moz-border-radius-bottomleft: 1em;
			-moz-border-radius-topleft: 1em;
			-webkit-border-bottom-left-radius: 1em;
			-webkit-border-top-left-radius: 1em;
			border-bottom-left-radius: 1em;
			border-top-left-radius: 1em;
		}
		
		.sidecontentpullout:hover {
			background-color: #444444;
			color: White;
		}
		
		.sidecontent {
			background-color: Black;
			color: White;
			-moz-border-radius-bottomleft: 1em;
			-webkit-border-bottom-left-radius: 1em;
			border-bottom-left-radius: 1em;
		}
		
		.sidecontent > div > div {
			padding-left: 10px;
			padding-right: 40px;
		}
	</style>        
        
    </head>
    <body>
        <!--Navbar-->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle nav</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        <a href="http://twitter.com/strifeproleague" target="_blank"><i class="fa fa-border pull-left fa-twitter"></i></a>
                        <a href="/" style="text-decoration:none; color:black; font-family: 'Audiowide', 'cursive';">STRIFE PRO LEAGUE</a>
                    </div>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{'standings/index'|site_url}}">Standings</a></li>
                        <li><a href="{{'main/contact'|site_url}}">Contact</a></li>
                        <li><a href="{{'main/rules'|site_url}}">Rules</a></li>
                        <li><a href="{{'main/bfbtournament'|site_url}}">Battle For Bot Tournament</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">                    
                    {% if user.isvalid != "true" %}
                        <li><a href="{{'auth/login'|site_url}}" rel="async" ajaxify="{{'auth/auth_ajax/ion_auth_dialog/login'|site_url}}">Login</a></li>
                        <li><a href="{{'auth/create_user'|site_url}}" rel="async" ajaxify="{{'auth/auth_ajax/ion_auth_dialog/create_user'|site_url}}">Signup</a></li>
                    {% else %}
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{user.uname}} <b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            {% if user.isAdmin == TRUE %}
                            <li><a href="{{'auth/index'|site_url}}">Admin</a></li>
                            {% else %}
                            <li><a href="{{'team/edit'|site_url}}">Edit Team</a></li>
                            <li><a href="{{'team/portal'|site_url}}">Team Portal</a></li>
                            {% endif %}
                            <li><a href="{{'auth/logout'|site_url}}">Logout</a></li>
                          </ul>
                        </li>
                     {% endif %}
                  </ul>
                </div>
            </div>
        </div>


        <div class="col-md-12">
            <div class="container">                     
          <div id="extruderAds" class="{title:'Google Ads'} extruder" style="width: 160px; height: 605px; background-color: #F8F8F8;"> 
            <!-- SPL -->
            <ins id="ads" class="adsbygoogle"
             style="display:block; padding-top: 1px;"
             data-ad-client="ca-pub-9458588775176630"
             data-ad-slot="3642177922"
             data-ad-format="auto"></ins>
          </div>
          <div id="extruderSpons" class="{title:'Sponsors'} extruder" style="width: 200px; height: 605px;"> 
              <a href="http://www.gamevox.com" target="_blank"><img src="/assets/images/gamevox.png" style="width:100%; height:100%;" /></a>
          </div>
                {% block content %}
                {% endblock %}
            </div>
        </div>
        <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation"
             style="min-height: 22px;">
            <div class="container">
                <div class="col-md-12">
                    <p class="text-right text-muted">
                        &copy;2014 StrifeProLeague.com. All rights reserved. |
                    <a href="/assets/privacy.html" target="_blank">Privacy Policy</a> |
                    </p>
                </div>
            </div>
        </nav>

        <script src="{{'js/bootstrap.min.js'|assets_url()}}"></script>
        <script src="{{'js/main.js'|assets_url()}}"></script>
        <script src="{{'js/modules/skeleton.js'|assets_url()}}"></script>
        <!-- Extra javascript -->        
        {{ js }}
        
        <script type="text/javascript">
            var offset = 80;
            $('.sidenav li a').click(function(event){
               event.preventDefault();
               $($(this).attr('href'))[0].scrollIntoView();
               scrollBy(0, -offset);
            });
        </script>
        
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
